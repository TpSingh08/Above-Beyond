                    <p>
                        <%= car.make %>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3>Model</h3>
                </div>
                <div class="col">
                    <p>
                        <%= car.model %>
                    </p>
                </div>
            </div>
            
            
            </div>
            
            <div class="row">
                <div class="col">
                    <h3>Year</h3>
                </div>
                <div class="col">
                    <p>
                        <%= car.year %>
                    </p>
                </div>
            </div>





        </div>
        

</div>
</div>


<button type="submit" class="btn rounded-pill" style=" width: 30%; margin-bottom: 10%; margin-top: 5%; background-color: aqua;color: #002147;" ><a href="/route/logout">Logout</a></button>

      
        
        
    </div>
</div>



